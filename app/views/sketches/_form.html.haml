= form_for @sketch do |f|
  - if @sketch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sketch.errors.count, "error")} prohibited this sketch from being saved:"
      %ul
        - @sketch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :topic_id
    = f.number_field :topic_id
  .field
    = f.label :artist_id
    = f.number_field :artist_id
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :upload_date
    = f.date_select :upload_date
  .actions
    = f.submit 'Save'
